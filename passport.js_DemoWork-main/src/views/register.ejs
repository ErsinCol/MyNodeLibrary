

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Hesap Oluşturun !</h1>
                        <% if(locals.validation_error != undefined) { %>
                            <%- include('./layout/_message') %>
                        <% } %>
                    </div>
                    <form class="user" action="/register" method="POST">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" name="name" value=" <%= typeof name != 'undefined' ? name : ''  %> " class="form-control form-control-user" id="exampleFirstName"
                                    placeholder="İsim">
                            </div>
                            <div class="col-sm-6">
                                <input type="text" name="surname" value=" <%= typeof surname != 'undefined' ? surname : ''  %> " class="form-control form-control-user" id="exampleLastName"
                                    placeholder="Soyisim">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" value=" <%= typeof email != 'undefined' ? email : ''  %> " class="form-control form-control-user" id="exampleInputEmail"
                                placeholder="Email Adresi">
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="password" name="password" value=" <%= typeof password != 'undefined' ? password : ''  %> " class="form-control form-control-user"
                                    id="exampleInputPassword" placeholder="Şifre">
                            </div>
                            <div class="col-sm-6">
                                <input type="password" name="repeatPassword" value=" <%= typeof repeatPassword != 'undefined' ? repeatPassword : ''  %> "  class="form-control form-control-user"
                                    id="exampleRepeatPassword" placeholder="Şifrenizi tekrarlayınız">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                           Kullanıcı Oluştur
                        </button>
                        <hr>
                        <a href="/index" class="btn btn-google btn-user btn-block">
                            <i class="fab fa-google fa-fw"></i> Google ile kayıt oluşturun
                        </a>
                        <a href="/index" class="btn btn-facebook btn-user btn-block">
                            <i class="fab fa-facebook-f fa-fw"></i> Facebook ile kayıt oluşturun
                        </a>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="/forgot-password">Şifrenizi mi unuttunuz?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="/login">Zaten bir hesabınız var mı? Giriş yapın !</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>